# Holiday Email Backend - Environment Configuration
#
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# The .env file is gitignored and will not be committed.

# =============================================================================
# DATABASE (Required)
# =============================================================================
# Postgres connection string from Render or local Postgres instance
#
# Local development:
#   DATABASE_URL="postgresql://user:password@localhost:5432/holiday_emails?schema=public"
#
# Render Postgres (use the Internal Database URL):
#   DATABASE_URL="postgresql://user:password@dpg-xxx.render.com:5432/holiday_emails"

DATABASE_URL="postgresql://user:password@localhost:5432/holiday_emails?schema=public"

# =============================================================================
# SECURITY (Required)
# =============================================================================

# ACCESS_PASSWORD - The password users enter to log in
# Choose a strong password and share it only with authorized users
ACCESS_PASSWORD="your-secure-access-password"

# JWT_SECRET - Secret key for signing JWT tokens
# Generate a secure random string (min 32 chars):
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-jwt-secret-min-32-characters"

# API_KEY_FRONTEND - API key that must match VITE_API_KEY_FRONTEND in frontend
# Generate a random string:
#   node -e "console.log(require('crypto').randomBytes(24).toString('hex'))"
API_KEY_FRONTEND="your-api-key-for-frontend"

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================

# Window in seconds for rate limiting (default: 60)
RATE_LIMIT_WINDOW_SEC=60

# Maximum requests per window (default: 30)
RATE_LIMIT_MAX_REQ=30

# =============================================================================
# SERVER (Optional)
# =============================================================================

# Port to run the server on (defaults to 4000)
PORT=4000

# CORS origin (defaults to "*", set to your frontend URL in production)
# CORS_ORIGIN=https://your-frontend.vercel.app
